<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:elevation="0dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:navigationIcon="@drawable/ic_back">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@drawable/ic_person"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/font_outfit_bold"
                            android:text="Sign Up"
                            android:textColor="@color/black"
                            android:textSize="24dp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="150dp"
                            android:src="@drawable/ic_logo_app"

                            />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/font_outfit_bold"
                    android:text="Create an acount"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="36dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="179dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:background="@drawable/custom_input"
                        android:hint="First Name"
                        android:id="@+id/edtFirstName"/>

                    <EditText
                        android:layout_width="134dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/custom_input"
                        android:hint="Last Name"
                        android:id="@+id/edtLastName"/>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TableRow>

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="36dp"
                            android:background="@drawable/custom_input"
                            android:hint="DD"
                            android:inputType="date"
                            android:id="@+id/dayOfBirthDate"/>

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/custom_input"
                            android:hint="MM"
                            android:inputType="datetime"
                            android:id="@+id/monthOfBirthDate"/>

                        <EditText
                            android:layout_width="116dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/custom_input"
                            android:hint="YYYY"
                            android:id="@+id/yearOfBirthDate"/>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="0,1">

                    <EditText
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/custom_input"
                        android:hint="Enter email address"
                        android:id="@+id/edtEmailAddress"/>

                    <EditText
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/custom_input"
                        android:inputType="textPassword"
                        android:hint="Enter password"
                        android:id="@+id/edtPassword"/>

                    <EditText
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/custom_input"
                        android:hint="Re-enter password"
                        android:inputType="textPassword"
                        android:id="@+id/edtReEnterPassword"/>

                    <TextView
                        android:id="@+id/by_clicking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="36dp"
                        android:text="By clicking Sign Up, you agree to our Terms, Privacy Policy and Cookies Policy."
                        android:textAppearance="@style/by_clicking"
                        android:textFontWeight="400" />

                    <Button
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/bg_button"
                        android:fontFamily="@font/font_outfit_bold"
                        android:text="Sign Up"
                        android:textFontWeight="400"
                        android:textSize="18dp"
                        android:id="@+id/btnSignUp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already register ?"
                            android:textSize="17dp"
                            android:layout_marginEnd="10dp"
                            />

                        <Button
                            android:id="@+id/btn_Registered_logIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Log in" />
                    </LinearLayout>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
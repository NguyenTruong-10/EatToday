<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:navigationIcon="@drawable/ic_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/font_outfit_bold"
                        android:text="General acount"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="80dp"
                        android:src="@drawable/ic_logo_app"

                        />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="54dp"
                android:background="@drawable/bg_radius_bottom_corner"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/img_ava"
                    android:id="@+id/img_avatar"/>

                <TextView
                    android:id="@+id/txt_change_ava"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="Update user info"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="179dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="36dp"
                    android:background="@drawable/custom_input"
                    android:hint="First Name"
                    android:id="@+id/edt_firstName"/>

                <EditText
                    android:layout_width="134dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/custom_input"
                    android:hint="Last Name"
                    android:id="@+id/edt_lastName"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TableRow>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="36dp"
                        android:background="@drawable/custom_input"
                        android:hint="DD"
                        android:id="@+id/edt_dayBirthdate"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/custom_input"
                        android:hint="MM"
                        android:id="@+id/edt_monthBirthdate"/>

                    <EditText
                        android:layout_width="116dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/custom_input"
                        android:hint="YYYYY"
                        android:id="@+id/edt_yearBirthdate"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

                <EditText
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="36dp"
                    android:background="@drawable/custom_input"
                    android:hint="Enter email address"
                    android:id="@+id/edt_emailAddress"/>

                <Button
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="36dp"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/font_outfit_bold"
                    android:text="Update"
                    android:textFontWeight="400"
                    android:textSize="18dp"
                    android:id="@+id/btn_update"/>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
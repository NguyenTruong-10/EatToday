<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:navigationIcon="@drawable/ic_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/font_outfit_bold"
                        android:text="Account Recovery"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="55dp"
                        android:src="@drawable/ic_logo_app"

                        />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/bg_radius_bottom_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="Khôi phục tài khoản"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_recovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="Để giữ an toàn cho tài khoản của bạn, chúng tôi muốn đảm bảo rằng bạn chính là người đang cố đăng nhập"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="16dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar_re_authentication"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_ava" />


            </LinearLayout>
            <TextView
                android:id="@+id/note_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="48dp"
                android:fontFamily="@font/google_sans_regular"
                android:paddingLeft="20dp"
                android:text="Đây là thông báo link reset password,
                nếu bạn nhìn thấy dòng này thì nghĩa là code đang lỗi"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="16dp"
                android:background="@drawable/custom_text_view"/>

            <Button
                android:id="@+id/btn_sentEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/google_sans_regular"
                android:text="Gửi email khôi phục"
                android:textAllCaps="false"
                android:textFontWeight="500"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>